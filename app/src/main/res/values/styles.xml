<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="firebaseUIStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">#004D8A</item>
    </style>

    <style name="userNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/user_name_text_view_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/user_name_text_view_start_end_margin</item>
        <item name="android:layout_marginStart">@dimen/user_name_text_view_start_end_margin</item>
        <item name="android:layout_marginEnd">@dimen/user_name_text_view_start_end_margin</item>
    </style>

    <style name="addAppointmentButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/map_buttons</item>
    </style>

    <style name="signoutButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/sign_out_text</item>
        <item name="android:background">@drawable/sign_out_button</item>
    </style>

    <style name="loginMessageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/message_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginEnd">@dimen/login_message_margin</item>
        <item name="android:layout_marginStart">@dimen/login_message_margin</item>
    </style>

    <style name="hospital_list_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/list_of_hospitals_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/hospital_list_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>
    <style name="hospital_list_recycler_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/list_of_recycler_hospitals_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/hospital_list_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>
    <style name="list_of_appointments_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/list_of_appointments_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/hospital_list_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="appointment_hospital_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/hospital_list_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:padding">@dimen/medium_margin</item>
    </style>

    <style name="hospital_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#5E5858</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/hospital_title_size</item>
    </style>

    <style name="hospital_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#838080</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textSize">@dimen/hospital_description_size</item>
    </style>

    <style name="patient_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#5E5858</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/hospital_title_size</item>
    </style>

    <style name="appointment_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#838080</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textSize">@dimen/hospital_description_size</item>
    </style>

    <style name="hospital_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/medium_margin</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
    </style>

    <style name="map_button_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/map_buttons</item>
    </style>

    <style name="appointment_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="date_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="save_button_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/extra_extra_large_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="appointment_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="appointment_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="date_picker_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="appointment_dose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dose_size</item>
        <item name="android:text">Δόση</item>
    </style>

    <style name="save_appointment_button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/save_button</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/extra_large_margin</item>
        <item name="android:background">@drawable/map_buttons</item>
    </style>

    <style name="recycler_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/extra_extra_large_margin</item>
        <item name="android:paddingBottom">@dimen/extra_extra_large_margin</item>
    </style>
</resources>