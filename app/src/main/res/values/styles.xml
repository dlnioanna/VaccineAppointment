<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="firebaseUIStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--         Status bar color.-->
        <item name="android:statusBarColor">#004D8A</item>
    </style>
    <style name="userNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/user_name_text_view_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/user_name_text_view_top_margin</item>
        <item name="android:layout_marginStart">@dimen/user_name_text_view_start_end_margin</item>
        <item name="android:layout_marginEnd">@dimen/user_name_text_view_start_end_margin</item>
    </style>

    <style name="addAppointmentButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/find_hospital_button</item>
        <item name="android:text">@string/search_hospital</item>
    </style>

    <style name="signoutButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/sign_out_button_bottom_margin</item>
        <item name="android:background">@drawable/sign_out_button</item>
        <item name="android:text">@string/sign_out_text</item>
    </style>
</resources>